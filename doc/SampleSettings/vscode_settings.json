{
  "editor.fontSize": 22,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  // "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  // "[typescript]": {
  //   "editor.formatOnPaste": true,
  //   "editor.formatOnSave": true,
  // },
  // "[javascript]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript", "typescript"],
  "debug.javascript.suggestPrettyPrinting": false,
  "javascript.format.semicolons": "insert",
  "editor.copyWithSyntaxHighlighting": false,
  "eslint.alwaysShowStatus": true,
  "eslint.codeActionsOnSave.rules": [],
  "eslint.run": "onType",
  "eslint.format.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[python]": {
     "editor.defaultFormatter": "ms-python.python",
    // "editor.tabSize": 2,
    // "editor.insertSpaces": false,
    // "editor.detectIndentation": false,
    // "editor.formatOnSave": true,
    // "editor.formatOnSaveMode": "file",
    // "editor.formatOnPaste": false
  },
  // "python.editor.tabSize": 2,
  // "python.formatting.yapfArgs": [
  //   "--style={based_on_style: google, column_width:80, indent_width: 2}"
  // ],
  // "python.formatting.blackArgs": ["--line-length=120"],
  // "python.linting.pylintArgs": ["--reports", "12", "--disable", "I0011"],
  // "python.linting.pylintEnabled": true,
  // "trunk.trunkGrayOutNonBlockingIssues": false,
  // "python.formatting.provider": "black",
  // "python.linting.trimTrailingWhitespace": true,
  "window.zoomLevel": 2,
  "typescript.updateImportsOnFileMove.enabled": "always",

  "diffEditor.renderSideBySide": false,
  "js/ts.implicitProjectConfig.checkJs": true,
  "diffEditor.ignoreTrimWhitespace": false,
}
